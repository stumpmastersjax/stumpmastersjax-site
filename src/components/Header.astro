---
const navLinks = [
  { href: '#services', label: 'Services' },
  { href: '#about', label: 'About' },
  { href: '#contact', label: 'Contact' },
];
---

<header class="bg-black border-b border-brand-yellow sticky top-0 z-40">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 hover:opacity-80 transition">
        <img src="/images/logo.png" alt="Stumpmasters Jax Logo" class="h-12 w-auto" />
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map(link => (
          <a 
            href={link.href}
            class="text-white hover:text-brand-yellow transition font-medium"
          >
            {link.label}
          </a>
        ))}
        <a 
          href="tel:+19044082450"
          class="px-6 py-2 bg-brand-yellow text-black font-bold rounded hover:bg-yellow-400 transition"
          onclick="trackEvent('Click', { category: 'Contact', label: 'Header Phone' })"
        >
          Call Now
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden text-white p-2"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      {navLinks.map(link => (
        <a 
          href={link.href}
          class="block py-2 text-white hover:text-brand-yellow transition"
        >
          {link.label}
        </a>
      ))}
      <a 
        href="tel:+19044082450"
        class="block mt-4 px-6 py-2 bg-brand-yellow text-black font-bold rounded text-center hover:bg-yellow-400 transition"
        onclick="trackEvent('Click', { category: 'Contact', label: 'Mobile Phone' })"
      >
        Call Now: 904-408-2450
      </a>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
