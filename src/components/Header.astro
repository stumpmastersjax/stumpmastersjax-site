---
const navLinks = [
  { href: '#services', label: 'Services' },
  { href: '#about', label: 'About' },
  { href: '#contact', label: 'Contact' },
];
---

<header class="bg-black shadow-lg sticky top-0 z-50">
  <div class="border-b-2 border-brand-yellow">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-24">
        <!-- Logo -->
        <a href="/" class="flex items-center hover:opacity-90 transition">
          <img src="/images/logo.png" alt="Stumpmasters Jax" class="h-16 w-auto" />
        </a>
        
        <!-- Desktop Navigation -->
        <div class="hidden lg:flex items-center gap-10">
          {navLinks.map(link => (
            <a 
              href={link.href}
              class="text-white text-lg font-medium hover:text-brand-yellow transition-colors duration-200 relative group"
            >
              {link.label}
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-brand-yellow group-hover:w-full transition-all duration-200"></span>
            </a>
          ))}
          <a 
            href="tel:+19044082450"
            class="px-6 py-3 bg-brand-yellow text-black font-bold rounded-md hover:bg-yellow-400 transition-all duration-200 shadow-md hover:shadow-lg transform hover:-translate-y-0.5"
            onclick="trackEvent('Click', { category: 'Contact', label: 'Header Phone' })"
          >
            ðŸ“ž Call Now
          </a>
        </div>
        
        <!-- Mobile Menu Button -->
        <button 
          id="mobile-menu-btn"
          class="lg:hidden text-white p-2 hover:text-brand-yellow transition"
          aria-label="Toggle menu"
        >
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      
      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="hidden lg:hidden pb-6 pt-2">
        <div class="flex flex-col space-y-4">
          {navLinks.map(link => (
            <a 
              href={link.href}
              class="text-white text-lg font-medium hover:text-brand-yellow transition-colors py-2 border-b border-gray-800"
            >
              {link.label}
            </a>
          ))}
          <a 
            href="tel:+19044082450"
            class="mt-4 px-6 py-3 bg-brand-yellow text-black font-bold rounded-md text-center hover:bg-yellow-400 transition"
            onclick="trackEvent('Click', { category: 'Contact', label: 'Mobile Phone' })"
          >
            ðŸ“ž Call 904-408-2450
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
  
  // Close mobile menu when clicking a link
  const mobileLinks = menu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
    });
  });
</script>
