    <script is:inline>
      // Umami Event Tracking - Production Only
      window.trackEvent = function(eventName, eventData = {}) {
        // Only track in production and if umami is available
        if (typeof umami !== 'undefined') {
          umami.track(eventName, eventData);
        }
        
        // Legacy GA4 tracking (if still needed)
        if (typeof gtag !== 'undefined') {
          gtag('event', eventName, eventData);
        }
        
        // Legacy Meta Pixel tracking (if still needed)
        if (typeof fbq !== 'undefined') {
          fbq('track', eventName, eventData);
        }
      };
      
      // Auto-track phone call clicks
      document.addEventListener('DOMContentLoaded', function() {
        // Track phone number clicks
        const phoneLinks = document.querySelectorAll('a[href^="tel:"]');
        phoneLinks.forEach(link => {
          link.addEventListener('click', function() {
            const phoneNumber = this.getAttribute('href').replace('tel:', '');
            trackEvent('call_click', { 
              phone: phoneNumber,
              location: window.location.pathname 
            });
          });
        });
        
        // Track primary CTA buttons
        const ctaButtons = document.querySelectorAll('a[data-open-estimate-modal], button[data-open-estimate-modal]');
        ctaButtons.forEach(button => {
          button.addEventListener('click', function() {
            trackEvent('cta_click', { 
              type: 'estimate_modal',
              location: window.location.pathname 
            });
          });
        });
        
        // Track form submissions (if contact form exists)
        const forms = document.querySelectorAll('form');
        forms.forEach(form => {
          form.addEventListener('submit', function() {
            trackEvent('form_submit', { 
              form: this.id || 'contact_form',
              location: window.location.pathname 
            });
          });
        });
        
        // Track outbound links
        const outboundLinks = document.querySelectorAll('a[href^="http"]:not([href*="stumpmastersjax.com"])');
        outboundLinks.forEach(link => {
          link.addEventListener('click', function() {
            trackEvent('outbound_click', { 
              url: this.getAttribute('href'),
              location: window.location.pathname 
            });
          });
        });
      });
    </script>
