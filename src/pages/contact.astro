---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import EstimateModal from '../components/EstimateModal.astro';

const title = 'Contact Us - Stump Grinding Jacksonville FL | Free Estimates | 904-408-2450';
const description = 'Contact Stump Masters Jax for free stump grinding estimates in Jacksonville, FL. Same-day service available. Call 904-408-2450 or request an estimate online.';
---

<BaseLayout title={title} description={description}>
  <Header />
  <Breadcrumbs items={[
    { label: 'Home', url: '/' },
    { label: 'Contact' }
  ]} />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-black py-12 px-4 border-b-4 border-brand-yellow">
      <div class="container-standard text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-brand-yellow mb-4">
          Contact Us
        </h1>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
          Get Your Free Stump Removal Estimate Today
        </p>
      </div>
    </section>

    <!-- Contact Information -->
    <section class="section bg-gray-700">
      <div class="container-standard">
        <div class="max-w-4xl mx-auto">
          <h2 class="subsection-header text-center mb-8">Get Your Free Stump Removal Estimate Today</h2>
          <p class="text-body text-center mb-12">
            Ready for professional stump grinding or tree stump removal in Jacksonville, FL? Contact us for a free, same-day estimate. We serve all of Duval County, St. Johns County, Clay County, and Nassau County with same-day and next-day service available.
          </p>
          
          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
            <a 
              href="tel:+19044082450"
              class="btn btn-primary"
            >
              ðŸ“ž Call 904-82450
            </a>
            <button 
              data-open-estimate-modal
              class="btn btn-secondary"
            >
              Request Free Estimate
            </button>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
            <!-- Phone -->
            <div class="contact-item">
              <div class="contact-icon-wrapper">
                <svg class="contact-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <p class="contact-label">Call or Text</p>
                <a href="tel:+19044082450" class="contact-value">904-408-2450</a>
                <p class="text-gray-400 text-sm mt-1">Free estimates over the phone</p>
              </div>
            </div>
            
            <!-- Email -->
            <div class="contact-item">
              <div class="contact-icon-wrapper">
                <svg class="contact-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <p class="contact-label">Email</p>
                <a href="mailto:stumpmastersjax@gmail.com" class="contact-value text-lg">stumpmastersjax@gmail.com</a>
                <p class="text-gray-400 text-sm mt-1">We respond within 24 hours</p>
              </div>
            </div>
            
            <!-- Service Area -->
            <div class="contact-item">
              <div class="contact-icon-wrapper">
                <svg class="contact-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <p class="contact-label">Service Area</p>
                <p class="contact-value text-lg">Northeast Florida</p>
                <p class="text-gray-400 text-sm mt-1">
                  <a href="/service-areas" class="text-brand-yellow hover:underline">View all service areas â†’</a>
                </p>
              </div>
            </div>
            
            <!-- Hours -->
            <div class="contact-item">
              <div class="contact-icon-wrapper">
                <svg class="contact-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <p class="contact-label">Business Hours</p>
                <p class="contact-value text-lg">Mon-Fri: 7am-7pm</p>
                <p class="text-gray-400 text-sm mt-1">Weekend appointments available</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    </main>
  
  <Footer />
  <EstimateModal />
</BaseLayout>
