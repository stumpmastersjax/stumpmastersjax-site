---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import EstimateModal from '../components/EstimateModal.astro';

const title = 'Contact Us - Stump Grinding Jacksonville FL | Free Estimates | 904-408-2450';
const description = 'Contact Stumpmasters Jax for free stump grinding estimates in Jacksonville, FL. Same-day service available. Call 904-408-2450 or request an estimate online.';
---

<BaseLayout title={title} description={description}>
  <Header />
  <Breadcrumbs items={[
    { label: 'Home', url: '/' },
    { label: 'Contact' }
  ]} />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-black py-12 px-4 border-b-4 border-brand-yellow">
      <div class="container-standard text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-brand-yellow mb-4">
          Contact Us
        </h1>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
          Get Your Free Stump Removal Estimate Today
        </p>
      </div>
    </section>

    <!-- Contact Information -->
    <section class="section bg-gray-700">
      <div class="container-standard">
        <div class="max-w-4xl mx-auto">
          <h2 class="subsection-header text-center mb-8">Get Your Free Stump Removal Estimate Today</h2>
          <p class="text-body text-center mb-12">
            Ready for professional stump grinding or tree stump removal in Jacksonville, FL? Contact us for a free, same-day estimate. We serve all of Duval County, St. Johns County, and Clay County with same-day and next-day service available.
          </p>
          
          <!-- CTA Buttons -->
          <div class="mb-12 pt-8 border-t border-gray-800">
            <h3 class="text-xl font-bold text-white mb-6 text-center">Ready to Get Started?</h3>
            <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
              <a 
                href="tel:+19044082450"
                class="btn btn-primary"
                onclick="trackEvent('Click', { category: 'Contact', label: 'Contact Page CTA Phone' })"
              >
                ðŸ“ž Call 904-408-2450
              </a>
              <button 
                data-open-estimate-modal
                class="btn btn-secondary"
              >
                Request Free Estimate
              </button>
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
            <!-- Phone -->
            <div class="contact-item">
              <div class="contact-icon-wrapper">
                <svg class="contact-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <p class="contact-label">Call or Text</p>
                <a href="tel:+19044082450" class="contact-value">904-408-2450</a>
                <p class="text-gray-400 text-sm mt-1">Free estimates over the phone</p>
              </div>
            </div>
            
            <!-- Email -->
            <div class="contact-item">
              <div class="contact-icon-wrapper">
                <svg class="contact-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <p class="contact-label">Email</p>
                <a href="mailto:stumpmastersjax@gmail.com" class="contact-value text-lg">stumpmastersjax@gmail.com</a>
                <p class="text-gray-400 text-sm mt-1">We respond within 24 hours</p>
              </div>
            </div>
            
            <!-- Service Area -->
            <div class="contact-item">
              <div class="contact-icon-wrapper">
                <svg class="contact-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <p class="contact-label">Service Area</p>
                <p class="contact-value text-lg">Northeast Florida</p>
                <p class="text-gray-400 text-sm mt-1">
                  <a href="/service-areas" class="text-brand-yellow hover:underline">View all service areas â†’</a>
                </p>
              </div>
            </div>
            
            <!-- Hours -->
            <div class="contact-item">
              <div class="contact-icon-wrapper">
                <svg class="contact-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <p class="contact-label">Business Hours</p>
                <p class="contact-value text-lg">Mon-Fri: 7am-7pm</p>
                <p class="text-gray-400 text-sm mt-1">Weekend appointments available</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Highlights -->
    <section class="section bg-black">
      <div class="container-standard">
        <h2 class="section-header">Why Contact Stumpmasters Jax?</h2>
        <div class="section-divider"></div>
        
        <div class="grid-3-col">
          <div class="card card-compact">
            <h3 class="subsection-header-yellow">Same-Day Service</h3>
            <p class="text-body text-small">
              Need fast service? We offer same-day and next-day stump grinding throughout Jacksonville and surrounding areas. Call us to check availability.
            </p>
          </div>
          
          <div class="card card-compact">
            <h3 class="subsection-header-yellow">Free Estimates</h3>
            <p class="text-body text-small">
              Get your free estimate over the phone - just describe your project. No hidden fees, no surprises. Transparent, competitive pricing.
            </p>
          </div>
          
          <div class="card card-compact">
            <h3 class="subsection-header-yellow">Veteran-Owned</h3>
            <p class="text-body text-small">
              Proudly veteran-owned and operated. We offer a 10% discount to all active military members and veterans. Thank you for your service!
            </p>
          </div>
          
          <div class="card card-compact">
            <h3 class="subsection-header-yellow">Licensed & Insured</h3>
            <p class="text-body text-small">
              Fully licensed and insured for all stump grinding and tree removal work in Jacksonville, FL and surrounding areas.
            </p>
          </div>
          
          <div class="card card-compact">
            <h3 class="subsection-header-yellow">5-Star Rated</h3>
            <p class="text-body text-small">
              Rated 5 stars on Google. <a href="/reviews" class="text-brand-yellow hover:underline">Read our reviews</a> to see why Jacksonville trusts Stumpmasters Jax.
            </p>
          </div>
          
          <div class="card card-compact">
            <h3 class="subsection-header-yellow">Professional Service</h3>
            <p class="text-body text-small">
              State-of-the-art equipment, experienced team, and commitment to excellence on every project. <a href="/about" class="text-brand-yellow hover:underline">Learn more about us</a>.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="section bg-gray-700">
      <div class="container-narrow">
        <h2 class="section-header">Frequently Asked Questions</h2>
        <div class="section-divider"></div>
        
        <div class="space-y-6">
          <div class="card">
            <h3 class="subsection-header-yellow">How quickly can you provide an estimate?</h3>
            <p class="text-body text-small">
              We provide free estimates over the phone immediately. Just call <a href="tel:+19044082450" class="text-brand-yellow hover:underline">904-408-2450</a> and describe your stump grinding project. For more complex jobs, we can schedule an on-site visit.
            </p>
          </div>
          
          <div class="card">
            <h3 class="subsection-header-yellow">Do you offer same-day service?</h3>
            <p class="text-body text-small">
              Yes! We offer same-day and next-day stump grinding service throughout Jacksonville and surrounding areas, subject to availability. Call us to check our schedule.
            </p>
          </div>
          
          <div class="card">
            <h3 class="subsection-header-yellow">What areas do you serve?</h3>
            <p class="text-body text-small">
              We serve all of Duval County, St. Johns County, and Clay County, including Jacksonville, Jacksonville Beach, St. Augustine, Ponte Vedra, Orange Park, and more. <a href="/service-areas" class="text-brand-yellow hover:underline">View our complete service area</a>.
            </p>
          </div>
          
          <div class="card">
            <h3 class="subsection-header-yellow">What payment methods do you accept?</h3>
            <p class="text-body text-small">
              We accept cash, check, credit cards, and debit cards. Payment is due upon completion of the work.
            </p>
          </div>
        </div>
        
        <div class="text-center mt-8">
          <p class="text-gray-300">
            Have more questions? <a href="/faq" class="text-brand-yellow hover:underline font-semibold">Visit our FAQ page</a> or give us a call!
          </p>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="section bg-black">
      <div class="container-narrow text-center">
        <h2 class="text-3xl font-bold text-brand-yellow mb-6">
          Ready to Remove That Stump?
        </h2>
        <p class="text-xl text-gray-300 mb-8 leading-relaxed">
          Contact us today for your free estimate. Same-day service available!
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:+19044082450" class="btn btn-primary">
            ðŸ“ž Call 904-408-2450
          </a>
          <button data-open-estimate-modal class="btn btn-secondary">
            Request Free Estimate
          </button>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
  <EstimateModal />
</BaseLayout>
